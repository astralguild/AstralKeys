<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="GreatVault.lua"/>

	<!--
    ********************************************************************************
    Vault Frame Template
    ********************************************************************************
    -->
	<Button name="AstralKeysVaultFrameTemplate" virtual="true" mixin="AstralKeysVaultMixin">
		<Size>
			<AbsDimension x="180" y="60"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentNameString" inherits="InterUIBold_Normal" wordwrap="false" parentKey="nameString" justifyH="LEFT">
					<Size>
						<AbsDimension x="180" y="15"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
					</Anchors>
				</FontString>
				<FontString name="$parentTier1String" inherits="InterUIBold_Normal" wordwrap="false" parentKey="tier1String" text="T1" justifyH="LEFT">
					<Size>
						<AbsDimension x="70" y="15"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentNameString" relativePoint="BOTTOMLEFT" x="10" y="-5"/>
					</Anchors>
				</FontString>
				<FontString name="$parentTier1" inherits="InterUIRegular_Small" wordwrap="false" parentKey="tier1" text="T1" alpha="0.5" justifyH="LEFT">
					<Size>
						<AbsDimension x="70" y="15"/>
					</Size>
					<Anchors>
						<Anchor point="TOP" relativeTo="$parentTier1String" relativePoint="BOTTOM" x="0" y="-2"/>
					</Anchors>
				</FontString>
				<FontString name="$parentTier2String" inherits="InterUIBold_Normal" wordwrap="false" parentKey="tier2String" text="T2" justifyH="LEFT">
					<Size>
						<AbsDimension x="70" y="15"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentTier1String" relativePoint="TOPRIGHT" x="10" y="0"/>
					</Anchors>
				</FontString>
				<FontString name="$parentTier2" inherits="InterUIRegular_Small" wordwrap="false" parentKey="tier2" text="T1" alpha="0.5" justifyH="LEFT">
					<Size>
						<AbsDimension x="70" y="15"/>
					</Size>
					<Anchors>
						<Anchor point="TOP" relativeTo="$parentTier2String" relativePoint="BOTTOM" x="0" y="-2"/>
					</Anchors>
				</FontString>
				<FontString name="$parentTier3String" inherits="InterUIBold_Normal" wordwrap="false" parentKey="tier3String" text="T3" justifyH="LEFT">
					<Size>
						<AbsDimension x="70" y="15"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentTier2String" relativePoint="TOPRIGHT" x="10" y="0"/>
					</Anchors>
				</FontString>
				<FontString name="$parentTier3" inherits="InterUIRegular_Small" wordwrap="false" parentKey="tier3" text="T1" alpha="0.5" justifyH="LEFT">
					<Size>
						<AbsDimension x="70" y="15"/>
					</Size>
					<Anchors>
						<Anchor point="TOP" relativeTo="$parentTier3String" relativePoint="BOTTOM" x="0" y="-2"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Button>
</Ui>